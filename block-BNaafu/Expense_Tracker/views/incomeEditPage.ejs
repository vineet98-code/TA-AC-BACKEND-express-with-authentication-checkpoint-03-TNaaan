<% include partials/header %> 

 <main class="w-full h-screen flex justify-center items-center" style="background-image: url(/images/background.gif); background-repeat: no-repeat; height: 91vh; background-size: cover;">
    <div class="bg-white rounded-lg px-6 m-auto py-4  shadow-lg  border-gray-50 ">
        <lottie-player src="https://assets3.lottiefiles.com/packages/lf20_rqes9zyp.json"  background="transparent"  speed="1"  style="width: 300px; height: 150px;"  loop autoplay class="rounded-full"></lottie-player>
        <h3 class="font-bold px-8 text-xl my-4">Edit IncomePage</h3>
        <section class="h-custom flex flex-col items-center w-1/3 mx-auto justify-center">
            <form action="/income/<%= income.id %>" method="POST" class="flex flex-col px-8 rounded-lg w-custom">
                <input type="text" name="incname" placeholder="Enter Income Name" class="p-3  my-2 rounded-lg border-2" value="<%= income.incname %>">
                <input type="text" name="sources" placeholder="Enter the Income Source" class="p-3  my-2 rounded-lg border-2" value="<%= income.sources %>">
                <input type="number" name="amount" placeholder="Amount" class="p-3  my-2 rounded-lg border-2" value="<%= income.amount %>">
                <input type="date" name="date" class="p-3  my-2 rounded-lg border-2">
                <input type="submit" value="Update Income"  class="p-3 bg-blue-500 text-white font-bold my-2 rounded-lg hover:bg-blue-400">
            </form>
        </section>
    </div>
 </main>

