<% include partials/header %> 

<main class="w-full h-screen flex justify-center items-center" style="background-image: url(/images/background.gif); background-repeat: no-repeat; background-size: cover;">
    <div class="w-4/12">
        <form action="/users/login/resetpassword/verify" method="POST" class="py-16 px-8 border-2 rounded-lg bg-white relative">
            <h2>Please Enter verification Code</h2>
            <% if(error) {%>
                <p class="text-red-400"><%=error  %> </p>
            <% } %> 
            <% if(info) { %>
                <h3 class="text-green-500 font-bold"><%= info %></h3>
            <% } %>

            <input class="w-full py-3 outline-none px-4 border-2 rounded-lg mt-4" type="password" name="passcode" placeholder="Enter your verification code">
            <input type="submit" class="w-full py-3 outline-none px-4 border-2 rounded-lg mt-4">
        </form>
    </div>
</main>